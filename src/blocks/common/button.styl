.button_live-chat
  background yellow
  border solid 2px yellow
  color blue
  font 600 14px font__raleway
  margin 0 20px 0 0
  padding 10px 29px
  transition background 300ms ease-in
  position relative

.button_live-chat:hover
  background white

.button_live-chat::after
  content ""
  background blue
  height 34px
  left 142px
  opacity 0.31
  position absolute
  top 5px
  width 1px

.button_service
  color white
  border solid 2px white
  font 700 18px font__raleway
  margin 30px 0 50px 0
  padding 20px 50px
  transition background, color 300ms ease-in

.button_service:hover
  background white
  color blue

.button_plans
  background yellow
  color blue
  border solid 2px white
  font 700 18px font__raleway
  margin 10px
  padding 30px 50px
  transition background, border 300ms ease-in

.button_plans:hover
  background white
  border solid 2px yellow

@media (min-width: tablet)
  .button_live-chat
    margin 0 20px

@media (min-width: screen)
  .button_plans
    margin 0

@media (min-width: screen2)
  .button_live-chat
    margin 0 20px 0 0
    