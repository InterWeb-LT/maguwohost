.service
  align-items center
  display flex
  flex-flow column wrap

.service_webhost
  background blue

.service_domain
  background yellow

.service__icon
  margin 50px 0 0 0

.service__icon_webhost
  height 169px
  width 168px

.service__icon_domain
  color blue
  font 700 134px font__raleway

.service__title
  color white
  font 700 30px font__raleway
  margin 50px 0 0 0

.service__description
  color white
  font 400 14px font__raleway
  margin 20px 0 0 0
  padding 10px
  text-align center

@media (min-width: tablet)
  .service__title
    font 700 36px font__raleway
  
  .service__description
    padding 10px 100px

@media (min-width: screen)
  .service_domain
    padding 12px 0 0 0
  
  .services
    background linear-gradient(to right, blue 0%, blue 50%, yellow 50%, yellow 100%)

@media (min-width: screen2)
  .service__description
    padding 10px 150px