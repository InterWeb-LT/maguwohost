.contact
  align-items center
  display flex
  flex-flow row wrap
  justify-content center
  padding 0 0 10px 0
  width 100%

.contact__text
  color blue
  font 600 12px/24px font__raleway

.contact__tel
  color blue
  font 700 24px sans-serif
  padding 0 0 0 20px
  
@media (min-width: tablet)
  .contact__button_live-chat
    margin 0 20px

@media (min-width: screen)
  .contact__text
    width none

@media (min-width: screen2)
  .contact
    border-left solid 1px rgba(blue, 0.31);
    padding 37px 0
    width 370px
    