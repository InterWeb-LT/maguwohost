.header
  background white

.logo
  color blue
  display flex
  font 400 30px/32px font__rockwell
  margin 10px

.logo_custom
  font 700 30px/32px font__rockwell

.logo__icon
  height 32px
  margin 0 18px 0 0
  width 26px

.nav-bar
  align-items center
  display flex
  margin 10px
  position relative

.nav-bar__list
  display none
  list-style-type none
  margin 0
  padding 0
  position absolute
  top 35px
  right 0

.nav-bar__title
  color blue
  font 400 16px/32px font__raleway
  padding 5px 0

.nav-bar:hover .nav-bar__list
  align-items flex-end
  display flex
  flex-flow column wrap
 
.nav-bar__link
  background white
  font 400 16px/32px font__rockwell
  padding 10px
  text-transform uppercase
  transition color 100ms ease-in

.nav-bar__link:hover
  color yellow

.contact
  align-items center
  display flex
  flex-flow row wrap
  justify-content center
  width 100%

.contact__text
  color blue
  font 600 12px/24px font__raleway

.contact__button_live-chat
  background yellow
  border solid 2px yellow
  color blue
  font 600 14px/24px font__raleway
  margin 0 20px 0 0
  padding 10px 29px
  transition background 300ms ease-in
  position relative

.contact__button_live-chat:hover
  background white

.contact__button_live-chat::after
  content ""
  background blue
  height 34px
  left 142px
  opacity 0.31
  position absolute
  top 5px
  width 1px

.contact__tel
  color blue
  font 700 24px/24px sans-serif
  padding 0 0 0 20px
  
@media (min-width: tablet)
  .contact__button_live-chat
    margin 0 20px

@media (min-width: screen)
  .nav-bar
    align-items flex-start
    display flex

  .nav-bar__list
    display flex
    position relative
    top 0

  .nav-bar__title
    display none

  .nav-bar:hover .nav-bar__list
    display flex
    flex-flow row wrap
   
  .nav-bar__link
    padding 10px
  
  .contact__text
    width none

@media (min-width: screen2)
  .nav-bar__item
    margin 10px

  .contact
    border-left solid 1px rgba(blue, 0.31);
    // align-content flex-start
    // justify-content flex-start
    padding 37px 0
    width 370px
    
  .contact__button_live-chat
    margin 0 20px 0 0