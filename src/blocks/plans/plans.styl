.plans
  background blue
  padding 50px 0

.plans_wrap
  align-items flex-start
  display flex
  flex-flow column nowrap

.plans__title
  color white
  font 700 35px font__raleway
  margin 0 10px

.plans__description
  display none

.plans__button
  background yellow
  color blue
  border solid 2px white
  font 700 18px font__raleway
  margin 10px
  padding 30px 50px
  text-decoration none
  transition background, border 300ms ease-in

.plans__button:hover
  background white
  border solid 2px yellow

@media (min-width: screen)
  .plans__description
    color dimgrey
    display block
    font 400 18px font__raleway
    margin 10px 0
  
  .plans__title,
  .plans__button
    margin 0